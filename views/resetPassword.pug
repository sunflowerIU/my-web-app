extends base


block append scripts 
    script(src="/js/resetPassword.js") 


block content
  main.box
    .container.signup-container(id='')

      .form-container.sign-in-container.reset-password-form
        form.signinForm(action='#')
          h1 New password
          input.new-password(type='password', placeholder='New password',required,minlength="8")
          input.password-confirm(type='password', placeholder='Password confirm',required,minlength="8")
          button.btn.btn-dark Change password
      .overlay-container
        .overlay
          .overlay-panel.overlay-right
            h1 Set a new Password
            p Enter your new password to change your password.
